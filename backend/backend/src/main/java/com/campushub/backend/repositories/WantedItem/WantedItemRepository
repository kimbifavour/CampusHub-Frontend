package com.campushub.backend.repositories.wanteditem;

import com.campushub.backend.models.wanteditems.WantedItem;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import java.util.List;
import java.util.UUID;

@Repository
public interface WantedItemRepository extends JpaRepository<WantedItem, UUID> {

    List<WantedItem> findByUser_Id(UUID userId);

    List<WantedItem> findByCategory_Name(String categoryName);
}
